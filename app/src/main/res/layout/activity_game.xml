<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.indcoders.simplecardgame.GameActivity"
    android:background="@drawable/table_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="YOU"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="COM"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:id="@+id/ivP3"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true"
        android:src="@drawable/card_back"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:id="@+id/ivP4"
        android:layout_alignBottom="@+id/ivP3"
        android:layout_toRightOf="@+id/ivP3"
        android:src="@drawable/card_back"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:id="@+id/ivP5"
        android:layout_alignTop="@+id/ivP4"
        android:layout_toRightOf="@+id/ivP4"
        android:layout_toEndOf="@+id/ivP4"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:id="@+id/ivP2"
        android:layout_alignTop="@+id/ivP3"
        android:layout_toLeftOf="@+id/ivP3"
        android:layout_toStartOf="@+id/ivP3"
        android:src="@drawable/card_back"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:id="@+id/ivP1"
        android:layout_alignTop="@+id/ivP2"
        android:layout_toLeftOf="@+id/ivP2"
        android:layout_toStartOf="@+id/ivP2"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:id="@+id/ivC3"
        android:src="@drawable/card_back"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:id="@+id/ivC2"
        android:src="@drawable/card_back"
        android:layout_alignBottom="@+id/ivC3"
        android:layout_toLeftOf="@+id/ivC3"
        android:layout_toStartOf="@+id/ivC3"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:id="@+id/ivC1"
        android:layout_alignBottom="@+id/ivC2"
        android:layout_toLeftOf="@+id/ivC2"
        android:layout_toStartOf="@+id/ivC2"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:id="@+id/ivC4"
        android:src="@drawable/card_back"
        android:layout_alignBottom="@+id/ivC3"
        android:layout_toRightOf="@+id/ivC3"
        android:layout_toEndOf="@+id/ivC3"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:id="@+id/ivC5"
        android:layout_alignBottom="@+id/ivC4"
        android:layout_toRightOf="@+id/ivC4"
        android:layout_toEndOf="@+id/ivC4"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:id="@+id/ivPTurn"
        android:layout_above="@+id/ivP3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:id="@+id/ivCTurn"
        android:layout_below="@+id/ivC3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEAL"
        android:id="@+id/button"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ivC1"
        android:layout_toStartOf="@+id/ivC1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvResult"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white" />

</RelativeLayout>
